     <swiper-item>
      <view class="coin" bindtap="Coin">
        点击抛硬币
      </view>
      <view class="tablename">选择首先发球的一方</view>
      <view class="ChooseServe">
        <view class="ChooseServe-TeamA {{FirstServe==0 ? 'ServeChoosed' : ''}}" data-team='0' bindtap='ChooseServer'>{{TeamAName}}
        </view>
        <view class="ChooseServe-TeamB {{FirstServe==1 ? 'ServeChoosed' : ''}}" data-team='1' bindtap='ChooseServer'>{{TeamBName}}
        </view>
      </view>
