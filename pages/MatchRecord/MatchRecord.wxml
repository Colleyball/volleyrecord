<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">比赛信息</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">主队</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">客队</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">挑边</view>
</view>
<view class="swiper-tab-temp"></view>
<view>
  <swiper current="{{currentTab}}" autoplay="{{false}}" class="swiper-box" duration="300" style="height:{{swiperHeight}}rpx" bindchange="bindChange">
    <swiper-item>
      <form bindsubmit="formSubmit">
        <view class="tablename">输入比赛名称</view>
          <view class="inputView">
            <input placeholder-style="color:gray" placeholder="请输入比赛名称" maxlength="25" name="MatchName" bindinput="GetMatchName" style='height:80rpx;line-height:80rpx;width:100%'/>
          </view>
        <view class="tablename">输入裁判信息</view>
          <view class="inputView">
            <input placeholder-style="color:gray" placeholder="请输入第一裁判" maxlength="10" name="ARef" bindinput="GetRef1" style='height:80rpx;line-height:80rpx;width:100%'/>
          </view>
          <view class="inputView">
            <input placeholder-style="color:gray" placeholder="请输入第二裁判" maxlength="10" name="BRef" bindinput="GetRef2" style='height:80rpx;line-height:80rpx;width:100%'/>
          </view>
          <view class="inputView">
            <input placeholder-style="color:gray" placeholder="请输入记录员" maxlength="10" name="ARec" bindinput="GetRef3" style='height:80rpx;line-height:80rpx;width:100%'/>
          </view>
          <view class="inputView">
            <input placeholder-style="color:gray" placeholder="请输入辅助记录员" maxlength="10"name="BRec" bindinput="GetRef4" style='height:80rpx;line-height:80rpx;width:100%'/>
          </view>
      </form>  
    </swiper-item>
   
    <swiper-item>
      <view class="ChooseTeam">选择已有队伍</view>
      <view class="tablename">输入队伍名称</view>
      <view class="inputView">
        <input placeholder-style="color:gray" placeholder="请输入队伍名称" maxlength="15" name="TeamAName" bindinput="GetTeamAName" style='height:80rpx;line-height:80rpx;width:100%'/>
        </view>
      <view class="tablename">选择参赛队员</view>
        <view class="playerlist">
