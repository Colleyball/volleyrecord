page, .page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  background: linear-gradient(45deg,rgb(231, 159, 159),rgb(228, 147, 94)) 
}

.list {
  width: 680rpx;
  margin: 100rpx 0 0 35rpx;
}


.top-bar {
  display: flex;
  flex-direction: row;
  width: 680rpx;
  height: 80rpx;
  margin: 0 0 0 0;
  padding: 0;
  background: linear-gradient(45deg,rgba(31, 174, 221,0.05),rgba(255,83,77,0.05)); 
  border: 1rpx solid rgba(0, 0, 0, 0);
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
  border-radius: 6rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0);
}

.top-bar-icon {
  width: 40rpx;
  height: 40rpx;
}

.top-bar-text {
  width: 550rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
}

.user-avatar {
  width: 60rpx;
