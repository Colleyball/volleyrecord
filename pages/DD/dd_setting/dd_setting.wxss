.swiper-tab {
	width: 100%;
	height: 120rpx;
	text-align: left;
	line-height: 50rpx;
	position: fixed;
	top: 0;
	z-index: 20;
	background: linear-gradient(0,rgba(255,255,255,0.1),rgba(31, 174, 221,0.2));
	border-bottom: 0rpx solid rgba(0, 0, 0, 0.1)
}

.swiper-tab-list {
	line-height: 120rpx;
	font-size: 40rpx;
	display: inline-block;
	width: auto;
	color: rgba(0, 0, 0, 0.4);
	padding-left: 35rpx;
}

.on {
	color: rgba(0, 0, 0, 0.95);
	font-size: 70rpx;
	font-weight: bold;
}

.swiper-box {
	display: block;
	height: 100%;
	width: 100%;
	overflow: hidden;
	padding-top: 0rpx;
}

.swiper-box wx-view {
}

.list {
	width: 680rpx;
	margin: 150rpx 0 0 35rpx;
}

.ChooseTeam {
	width: 680rpx;
	height: 120rpx;
	line-height: 120rpx;
	background: linear-gradient(45deg,rgba(37,198,252,1),rgba(246, 214, 255, 0));
	border-radius: 0rpx;
	margin: 10rpx 0 0 0;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0);
	font-size: 45rpx;
	font-weight: bolder;
	color: rgba(255, 255, 255, 0.9)
}

.inputView {
	font-size: 40rpx;
	display: -webkit-flex;
	display: flex;
	width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
	-webkit-flex-direction: row;
	flex-direction: row;
	background-color: whitesmoke;
	border-radius: 0rpx;
	margin: 0 0 30rpx 0;
	text-align: center;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0)
}

.confirm-btn-background {
	position: fixed;
	left: 35rpx;
	bottom: 0;
	width: 680rpx;
	height: 100rpx;
	background: rgba(255, 255, 255, 0.9);
	z-index: 10;
}

.confirm-btn {
	position: fixed;
	width: 100%;
	height: 100rpx;
	left: 0;
	bottom: 0;
	background: linear-gradient(45deg,rgba(31, 174, 221,0.05),rgba(255,83,77,0.05));
	line-height: 100rpx;
	text-align: center;
	font-size: 50rpx;
	color: rgba(0, 0, 0, 0.2);
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0);
	z-index: 11;
}

.confirm-btn-yes {
	background: #25C6FC;
	color: rgba(0, 0, 0, 0.8 );
}