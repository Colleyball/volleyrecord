page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    background: url('http://www.aibotiyu.com/ImgFiles/ABSports/matchwin/background.jpg') no-repeat;
    background-attachment: fixed;
    background-size: cover;
}

.container{
  padding-top:5rpx;
  padding-bottom: 30rpx;
  margin: 0;
}

.card{
  display: flex;
  width:680rpx;
  height:160rpx;
  margin-left: 0rpx;
  line-height: 160rpx;
  flex-direction: row;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.pic{
  position: relative;
  width: 100rpx;
  height: 100rpx;
  left: 50rpx;
  top: 30rpx;
}

.title{
  position: relative;
  width: 300rpx;
  height: 90rpx;
  left: 80rpx;
}