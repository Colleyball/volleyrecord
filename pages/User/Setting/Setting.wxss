page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}

.Top{
  height: 400rpx;
  background-image: url("http://images.volleywang.cn/VolleyRecord/user/setting/bg.png");
  background-size: cover;
  background-repeat: no-repeat;
  text-align: center;
  width:100%;
  border-radius: 0rpx;
  margin: 20rpx 0 40rpx 0;
}

.userpic{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  box-shadow: 0px 5px 10px black;
  margin-top: 55rpx;
}

.name{
  color: #fff;
  margin-top: 20rpx;
}

.card{
  display: flex;
  width:680rpx;
  height:auto;
  line-height: 60rpx;
  flex-direction: row;
  background-color: whitesmoke;
  margin: 60rpx 0 60rpx 35rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.pic{
  background: url('http://images.volleywang.cn/VolleyRecord/user/setting/about.png') no-repeat center;
  background-size: auto 100rpx;
  position: relative;
  width: 150rpx;
  height: auto;
  margin: 0;
}

.title{
  position: relative;
  width: 490rpx;
  height: auto;
  font-size: 35rpx;
  margin: 0;
  color: rgba(0, 0, 0, 0.8);
  border-left: 1rpx solid rgba(0, 0, 0, 0.2);
  padding: 20rpx;
}

.pic2{
  background: url('http://images.volleywang.cn/VolleyRecord/user/setting/phone.png') no-repeat center;
  background-size: auto 100rpx;
  position: relative;
  width: 150rpx;
  height: auto;
  margin: 0;
}