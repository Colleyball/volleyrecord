page, .page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  background: rgba(250,250,250,1);
}

.list {
  width: 680rpx;
  margin: 20rpx 0 0 35rpx;
}

.inputView {
	font-size: 40rpx;
	width: 680rpx;
	height: 80rpx;
	line-height: 80rpx;
	background-color: whitesmoke;
	border-radius: 0rpx;
	margin: 0 0 30rpx 0;
	text-align: center;
  color: #333333;
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0)
}

.confirm-btn {
	position: fixed;
	width: 100%;
	height: 100rpx;
	left: 0;
	bottom: 0;
	background: linear-gradient(45deg,rgba(31, 174, 221,0.05),rgba(255,83,77,0.05));
	line-height: 100rpx;
	text-align: center;
	font-size: 50rpx;
	color: rgba(0, 0, 0, 0.2);
	box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0);
	z-index: 11;
}

.confirm-btn-yes {
	background: #25C6FC;
	color: rgba(0, 0, 0, 0.8 );
}
