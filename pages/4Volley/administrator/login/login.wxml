<view class="list">
  <view class="text-title m-left">管理员登录</view>
  <view class="inputView">
    <input bindinput="GetName" maxlength="20" placeholder="用户名" placeholderStyle="color:gray" style="height:80rpx;line-height:80rpx;width:100%"></input>
  </view>
  <view class="inputView">
    <input bindinput="GetPassword" maxlength="20" placeholder="密码" placeholderStyle="color:gray" style="height:80rpx;line-height:80rpx;width:100%" type="password"></input>
  </view>
  <view bindtap="BindConfirm" class="confirm-btn {{Name && Psw ? 'confirm-btn-yes ' : ''}}">确认登录
  </view>
</view>