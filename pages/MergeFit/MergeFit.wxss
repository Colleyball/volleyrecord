page,
.page {
    font-family: 'PingFang SC',
        'Helvetica Neue',
        Helvetica,
        'Droid Sans Fallback',
        'Microsoft Yahei',
        sans-serif;
    /*background: rgb(240, 240, 240);*/
    background: url('http://www.aibotiyu.com/ImgFiles/ABSports/niko/background7.jpg?v=2') no-repeat top;
    background-attachment: fixed;
    background-size: cover;
}

.home-title {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  z-index: 20;
  background: rgba(240, 240, 240,0.);
  align-items: center
}

.home-title-text {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: rgba(88, 79, 96, 1);
  margin: 0 0 0 15rpx
}

.home-title-back {
  height: 35rpx;
  width: 35rpx;
  margin: 0 0 0 35rpx
}

.title {
    color: white;
    margin: 280rpx 0 0 0;
    color: #333;
    font-weight: bold;
    text-shadow: 0 0 30rpx rgba(0, 0, 0, 0.2);
    height: 80rpx;
    line-height: 80rpx;
    font-size: 40rpx;
    text-align: center;
}

.list {
  width: 680rpx;
    margin: 200rpx 0 0 35rpx;
}

.choose-file-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: 30rpx 0 50rpx 0;
  justify-content: space-between;
}

.file-box {
  width: 480rpx;
  height: 190rpx;
  padding: 0 0;
  background: rgb(241, 229, 221);
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  /*border: 10rpx solid rgb(226, 195, 175);*/
  box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
}

.file-box-title {
  width: 470rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 0 0 0 10rpx;
}

.file-box-bg {
  width: 420rpx;
  height: 110rpx;
  background: white;
  padding: 0 20rpx;
  border-radius: 30rpx;
}

.file-info {
  line-height: 55rpx;
  font-size: 30rpx;
  color: #333;
}

.choose-btn {
  width: 190rpx;
  line-height: 190rpx;
  text-align: center;
  height: 190rpx;
  background: rgba(255, 102, 0, 1);
  border-radius: 40rpx;
  box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
  font-size: 100rpx;
  font-weight: bold;
  color: white;
}

.submit {
  background: rgb(255, 102, 0);
  height: 100rpx;
  width: 220rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  color: white;
  margin: 180rpx 0 0 225rpx;
  box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
}