page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    background: url('https://volleywang.cn/tofuture/background.jpg') no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position: bottom;
}

.search{
  width: 100%;
  height: 100rpx;
  position: fixed;
  top:0;
  z-index: 10;
  text-align: left;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0,0);
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0
}

.search-border {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4)
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.search-title {
  margin-left: 10rpx;
  width: 580rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5)
} 

.search-btn {
  text-align: center;
  font-size: 30rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-left: 1rpx solid rgba(0, 0, 0, 0.5)
}

.search-tip {
  position: fixed;
  width: 680rpx;
  top: 150rpx;
  left: 35rpx;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.5);
  z-index: 11
}

.find {
  width: 100%;
  height: 140rpx;
  margin: 100rpx auto 30rpx auto;
  padding: 15rpx 0 15rpx 0;
  display: flex;
  flex-direction: row;
  border-bottom-left-radius: 00rpx;
  border-bottom-right-radius: 0rpx;
  background: rgba(255, 255, 255,0.75);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0,0);
  align-items: center;
}

.find-item {
  width: 33.3%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}

.find-item-image {
  height: 80rpx;
  width: 80rpx;
  opacity: 0.8
}

.find-item-text {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8)
}

.resultlist{
  margin-top: 30rpx;
}

.match-result {
  width: 680rpx;
  height: auto;
  margin: 0 auto 30rpx auto;
  padding: 30rpx 0 30rpx 0;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  background: rgba(255, 255, 255,0.9);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0,0.3);
  align-items: center;
}

.match-detail {
  width: 600rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.match-detail-no {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bolder;
  border-radius: 50%;
  color: rgba(0,52,63,0.5);
  background: rgba(208, 233, 255, 0.6)
}

.match-detail-info {
  width: 480rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column
}

.maatch-detail-name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: rgba(0,0,0,0.8)
}

.maatch-detail-date {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  color: rgba(0,0,0,0.5)
}

.match-set {
  height: 200rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 8rpx 0;
  justify-content: space-around
}

.match-set-teama {
  width: 450rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(37, 198, 252, 0.6);
  border-radius: 40rpx;
}

.teama-name {
  width: 380rpx;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.teama-set {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255,83,77,0.8);
  text-align: center;
  border-radius: 50%;
  color: white
}

.match-set-teamb {
  width: 450rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255,83,77,0.6);
  border-radius: 40rpx;
  margin-left: 150rpx;
}

.teamb-name {
  width: 380rpx;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.teamb-set {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(37, 198, 252, 0.8);
  text-align: center;
  margin-left: 10rpx;
  border-radius: 50%;
  color: white
}

.match-video {
  height: 200rpx;
  width: 600rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-bottom: 15rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.2)
}

.match-statistic {
  height: 80rpx;
  line-height: 80rpx;
  width: 600rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(241,124,103,0.5);
  border-radius: 20rpx;
}

.match-score {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  text-align: left;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7)
}

.match-ref {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  text-align: left;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7)
}

.match-location {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  display: flex;
  flex-direction: row;
  align-items: center
}

.match-location-images {
  width: 40rpx;
  height: 40rpx;
}

.match-location-detail {
  height: 60rpx;
  line-height: 60rpx;
  width: 500rpx;
  text-align: left;
  padding: 10rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7)
}

.cover {
  top: 0;
  position: fixed;
  height: 100%;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  z-index: 9
}
