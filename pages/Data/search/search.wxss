page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    background: url('http://images.game-win.cn/VolleyRecord/data/background.jpg') no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position: bottom;
}

.search{
  width: 100%;
  height: 100rpx;
  position: fixed;
  top:0;
  z-index: 10;
  text-align: left;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0,0);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-border {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4)
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.search-title {
  margin-left: 10rpx;
  width: 580rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5)
} 

.search-btn {
  text-align: center;
  font-size: 30rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-left: 1rpx solid rgba(0, 0, 0, 0.5)
}

.search-tip {
  position: fixed;
  width: 680rpx;
  top: 150rpx;
  left: 35rpx;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.5);
  z-index: 11
}

.resultlist{
  margin-top: 140rpx;
}

.resultnum{
  position: relative;
  width: 680rpx;
  height:50rpx;
  color: rgba(0, 0, 0,0.5);
  font-size: 30rpx;
  line-height: 50rpx;
  background: rgba(255, 255, 255, 0);
  padding: 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4);
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0,0);
  margin: 0rpx 0rpx 40rpx 35rpx;
  text-align: center;
}

.result{
  position: relative;
  width: 680rpx;
  height:250rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 0;
  border-radius: 20rpx;
  color: rgba(0, 0, 0, 0.7);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0,0.3);
  margin: 0rpx 0rpx 70rpx 35rpx;
  text-align: center;
}

.teamA{
  width: 100%;
  height: 125rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0,0.1);
}

.teamB{
  width: 100%;
  height: 125rpx;
  line-height: 165rpx;
}

.vs{
  width: 100rpx;
  height: 100rpx;
  background-color: #3369E8;
  border-radius: 60rpx;
  line-height:100rpx;
  margin-top: -175rpx;
  margin-left: auto;
  margin-right: auto;
  color: white;
  z-index: 9999;
}

.cover {
  top: 0;
  position: fixed;
  height: 100%;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  z-index: 9
}
