page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    background: url('https://volleywang.cn/tofuture/background.jpg') no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position: bottom;
}

.top{
  width: 100%;
  height: 250rpx;
  background-color: rgba(242,239,230,0.9);
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top:0;
  z-index: 10;
  text-align: center;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0,0.2);
}

.teamA{
  width: 100%;
  height: 125rpx;
  line-height: 80rpx;
  font-size: 45rpx;
  text-align: center;
  border-bottom: 1rpx solid white;
  color: rgba(0, 0, 0, 0.8)
}

.teamB{
  height: 125rpx;
  line-height: 160rpx;
  width: 100%;
  font-size: 45rpx;
  text-align: center;
  margin-top: -40rpx;
  color: rgba(0, 0, 0, 0.6)
}

.h2h{
  height: 80rpx;
  width: 500rpx;
  line-height: 80rpx;
  font-size: 50rpx;
  color: white;
  text-align: center;
  border-radius: 40rpx;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0,0.3);
  margin-top: -40rpx;
  background-color: rgba(51,105,232,0.8);
}

.resultlist{
  margin-top: 290rpx;
}

.match-result {
  width: 680rpx;
  height: auto;
  margin: 0 auto 30rpx auto;
  padding: 30rpx 0 30rpx 0;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  background: rgba(255, 255, 255,0.9);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0,0.3);
  align-items: center;
}

.match-detail {
  width: 600rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.match-detail-no {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bolder;
  border-radius: 50%;
  color: rgba(0,52,63,0.5);
  background: rgba(208, 233, 255, 0.6)
}

.match-detail-info {
  width: 480rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column
}

.maatch-detail-name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: rgba(0,0,0,0.8)
}

.maatch-detail-date {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  color: rgba(0,0,0,0.5)
}

.match-set {
  height: 200rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 8rpx 0;
  justify-content: space-around
}

.match-set-teama {
  width: 450rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(37, 198, 252, 0.6);
  border-radius: 40rpx;
}

.teama-name {
  width: 380rpx;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.teama-set {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255,83,77,0.8);
  text-align: center;
  border-radius: 50%;
  color: white
}

.match-set-teamb {
  width: 450rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255,83,77,0.6);
  border-radius: 40rpx;
  margin-left: 150rpx;
}

.teamb-name {
  width: 380rpx;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.teamb-set {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(37, 198, 252, 0.8);
  text-align: center;
  margin-left: 10rpx;
  border-radius: 50%;
  color: white
}

.match-video {
  height: 200rpx;
  width: 600rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-bottom: 15rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.2)
}

.match-statistic {
  height: 80rpx;
  line-height: 80rpx;
  width: 600rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(241,124,103,0.5);
  border-radius: 20rpx;
}

.match-score {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  text-align: left;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7)
}

.match-ref {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  text-align: left;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7)
}

.match-location {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  display: flex;
  flex-direction: row;
  align-items: center
}

.match-location-images {
  width: 40rpx;
  height: 40rpx;
}

.match-location-detail {
  height: 60rpx;
  line-height: 60rpx;
  width: 500rpx;
  text-align: left;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7)
}


.add{
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  position: fixed;
  bottom: 15rpx;
  right: 325rpx;
  background-color: blueviolet;
  width: 100rpx;
  height: 100rpx;
  border-radius: 75rpx;
  box-shadow: 0px 0px  50px rgba(0, 0, 0, 0.6);
}

.coverbg{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(255,255,255,0.95);
  overflow: hidden;
  text-align: center;
}

.videotitle{
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid black;
  margin-top: 300rpx;
}

.tip{
  font-size: 30rpx;
  margin-top: 50rpx;
}

.videoaddress{
  font-size: 20rpx;
  margin-top: 50rpx
}

.copy{
  width:250rpx;
  height: 100rpx;
  margin-left: 250rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: white;
  text-align: center;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0,0.3);
  background-color: #3369E8;
  margin-top: 50rpx
}

.bottom {
  text-align: center;
  font-size: 30rpx;
  color: rgba(255,255,255,0.5);
  padding-bottom: 20rpx;
}