/* pages/find/winrank/winrank.wxss */
.top{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  margin: 0 0rpx 0rpx 0;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  box-shadow: 0px 0px 30px rgba(0, 0, 0, 0);
  background: url('http://images.volleywang.cn/VolleyRecord/data/background.jpg') top no-repeat;
  background-size: cover;
  text-align: left;
  padding-left: 50rpx;
  font-size: 55rpx;
  color: #1A1A1A;
  position: fixed;
  top: 0;
  z-index: 10
}

.list {
  margin: 150rpx 0 0 0;
}

.college{
  display: flex;
  width:100%;
  height:160rpx;
  margin: 0rpx 0 0rpx 0;
  line-height: 160rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 0rpx;
  padding: 0 35rpx 0 35rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0);
}

.rank{
  position: relative;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  background-color: rgba(94, 213, 209, 0.8)
}

.collegeh2h{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 450rpx;
  height: 160rpx;
  margin-left: 20rpx;
}

.name{
  position: relative;
  width: 450rpx;
  height: 90rpx;
  margin: 0rpx;
  line-height: 90rpx;
}

.detail{
  position: relative;
  width: 450rpx;
  height: 80rpx;
  margin: 0rpx;
  line-height: 80rpx;
  font-size:25rpx;
  color: rgba(0, 0, 0, 0.5)
}

.pre{
  position: relative;
  width: 120rpx;
  height: 160rpx;
  margin-left: 20rpx;
  font-size: 50rpx;
  font-style: italic;
  margin-left: -50rpx;
  color: rgba(0, 0, 0, 0.5)
}
