page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    background: url('http://www.aibotiyu.com/ImgFiles/ABSports/matchwin/background.jpg') no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background: white
}

.container{
  padding-top:5rpx;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center
}

.tablename{
  border-bottom: 2px solid whitesmoke;
  width:680rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin:0 auto 15rpx auto;
  text-align: center;
  font-size: 30rpx;
}

.inputView{
  font-size: 40rpx;
  display: flex;
  width:680rpx;
  height:80rpx;
  margin: 10rpx auto 30rpx auto;
  line-height: 80rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1)
}

.choose-team {
  width: 680rpx;
  height: 200rpx;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin: 10rpx auto 30rpx auto;
}

.confirm-btn {
  position: fixed;
  width: 750rpx;
  height: 80rpx;
  border-radius: 0;
  bottom: 00rpx;
  left: 0rpx;
  background: whitesmoke;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.2);
  box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.1)
}

.confirm-btn-yes {
  background: #25C6FC;
  color: rgba(0, 0, 0, 0.8 );
}